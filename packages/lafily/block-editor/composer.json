{
    "name": "lafily/block-editor",
    "description": "Modern block-based content editor for Laravel & Filament - Inspired by WordPress Gutenberg",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Your Name",
            "email": "your.email@example.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^11.0",
        "filament/filament": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Lafily\\BlockEditor\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Lafily\\BlockEditor\\BlockEditorServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
